{{#extend "layout"}}
  {{#content "content"}}
    <script async="{{''}}" defer="{{''}}" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAe4dh1pwMuO-cNWOSqsN3jnTmC87xLOsM&callback=initMap"></script>
    <div id="contact-page" class="container">
      <div class="bg">
        <div class="row">
          <div class="col-sm-12">
            <h2 class="title text-center">Contact<strong>{{' Us'}}</strong></h2>
            <div id="gmap" class="contact-map"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8">
            <div class="contact-form">
              <h2 class="title text-center">Get In Touch</h2>
              <div style="display: none" class="status alert alert-success"></div>
              <form id="main-contact-form" action="/contact-us" method="POST" class="contact-form row">{{#if customer}}
                  <div class="form-group col-md-6"><input type="text" name="fullName" value="{{customer.FullName}}" required="required" placeholder="Name" disabled class="form-control"></div>
                  <div class="form-group col-md-6"><input type="email" name="email" value="{{customer.Email}}" required="required" placeholder="Email" disabled class="form-control"></div>
                {{else}}
                  <div class="form-group col-md-6"><input type="text" name="fullName" required="required" placeholder="Name" class="form-control"></div>
                  <div class="form-group col-md-6"><input type="email" name="email" required="required" placeholder="Email" class="form-control"></div>
                {{/if}}
                <div class="form-group col-md-12"><input type="text" name="subject" required="required" placeholder="Subject" class="form-control"></div>
                <div class="form-group col-md-12"><textarea id="message" name="contactMessage" required="required" rows="8" placeholder="Your Message Here" class="form-control"></textarea></div>
                <div class="form-group col-md-12"><input type="submit" name="submit" value="Submit" class="btn btn-primary pull-right"></div>
              </form>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="contact-info">
              <h2 class="title text-center">Contact Info</h2>
              <address>
                <p>aStore Inc.</p>
                <p>6 Vanha maantie</p>
                <p>02660 Espoo, Finland</p>
                <p>Mobile: +2348146439559</p>
                <p>Fax: +2348146439559</p>
                <p>Email: info@astore.com</p>
              </address>
              <div class="social-networks">
                <h2 class="title text-center">Social Networking</h2>
                <ul>
                  <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                  <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                  <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                  <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/content}}{{/extend}}
