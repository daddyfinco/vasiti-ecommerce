{{#extend "layout"}}
  {{#content "content"}}
    <section>
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <!-- nav-bar-->
            <div class="left-sidebar">
              <div id="accordian" class="panel-group category-products">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title"><a href="/cat/all">All Products</a></h4>
                  </div>
                </div>
                <h2></h2>{{#each categories as |category|}}
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4 class="panel-title"><a href="/cat/{{category.CategorySlug}}">{{category.CategoryName}}</a></h4>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
            <!--/nav-bar-->
          </div><!-- category_products-->
          <div class="col-sm-9">
            <div class="features_items">
              <h2 class="title text-center">{{title}}</h2>{{#if products}}
                {{#each products as |product|}}{{var productUrl = (concat '/cat/' product.CategorySlug '/' product.ProductSlug)}}
                  <div class="col-sm-3">
                    <div class="product-image-wrapper">
                      <div class="single-products">
                        <div class="productinfo text-center"><a href="{{productUrl}}"><img src="/img/products/{{product.Image}}" alt="{{product.product_name}}"></a>
                          <p><a href="{{productUrl}}">{{product.product_name}}</a></p>
                          <h2>{{concat 'â‚¦' product.ProductPrice}}</h2>
                          <form action="/cart/{{product.ProductID}}/add" method="POST"><button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</button></form>
                        </div>
                      </div>
                    </div>
                  </div>
                {{/each}}{{/if}}
            </div>
          </div>
        </div>
        <!--/category_products-->
      </div>
    </section>
  {{/content}}{{/extend}}
