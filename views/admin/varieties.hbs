<section>
  <div class="container">
    <div class="row">
      <!--title here. no duplicate-->
      <!--if navList-->
      <div class="col-sm-3">
        <!-- nav-bar-->
        <div class="left-sidebar">
          <div id="accordian" class="panel-group category-products">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/cat">Categories</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/products">Products</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/orders">Orders</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/customers">Customers</a></h4>
              </div>
            </div>
          </div>
        </div>
        <!--/nav-bar-->
      </div>
      <div class="col-sm-9">
      <div class="features_items">{{#if products}}
          {{#each products.product_varieties as |product|}}
            <div class="row">
              <div class="col-sm-3">
                <div class="product-image-wrapper">
                  <div class="single-products">
                    <div class="productinfo text-center"><img src="/img/products/{{product.Image}}" alt="{{product.product_name}}"></div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <h2 class="cat">{{product.product_name}}</h2>
                <p><b>Category:</b>{{product.CategoryName}}</p>
                <p>{{product.ProductDescription}}</p>
                <p><b>Quantity:</b>{{product.UnitsInStock}}</p>
                <p><b>Manufacturing year:</b>{{product.ManufactureYear}}</p>
                <p><b>Brand:</b> aStore</p>
                <p><b>Price:</b>â‚¦ {{product.ProductPrice}}</p>
              </div>
              <div class="col-sm-3">
                <form action="/admin/products/{{product.ProductID}}/edit" method="GET" class="dev-form"><button type="submit" class="btn btn-default"><i class="fa fa-edit"></i>{{' Edit'}}</button></form>
                <form action="/admin/products/{{product.ProductID}}/delete" method="POST" class="dev-form"><button type="submit" class="btn btn-default"><i class="fa fa-trash-o"></i>{{' Delete'}}</button></form>
              </div>
            </div>
          {{/each}}{{/if}}</div>
    </div>
    <form action="/admin/products/add" method="GET"><button type="submit" class="btn btn-default"><i class="fa fa-plus"></i>{{' Add new product'}}</button></form><br><br>
    </div>
  </div>
</section>
