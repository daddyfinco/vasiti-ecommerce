<section>
  <div class="container">
    <div class="row">
      <!--title here. no duplicate-->
      <!--if navList-->
      <div class="col-sm-3">
        <!-- nav-bar-->
        <div class="left-sidebar">
          <div id="accordian" class="panel-group category-products">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/cat">Categories</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/products">Products</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/orders">Orders</a></h4>
              </div>
            </div>

          </div>
        </div>
        <!--/nav-bar-->
      </div>
      <div class="col-sm-9">
        <form id="editProduct" action="/admin/products/{{product.ProductID}}/edit" method="POST">
          <table class="table">
            <tbody>
            <tr>
              <td><label for="name">Product Name</label></td>
              <td><input type="text" id="name" name="name" value="{{product.product_name}}" required><br></td>
            </tr>
            <tr>
              <td><label for="category">Category</label></td>
              <td>
                <select id="category" name="category">{{#each categories as |category|}}
                  {{#ifEqual category.CategoryID product.CategoryID}}
                    <option value="{{category.CategoryID}}" selected>{{category.CategoryName}}</option>
                  {{else}}
                    <option value="{{category.CategoryID}}">{{category.CategoryName}}</option>
                  {{/ifEqual}}{{/each}}</select><br>
              </td>
            </tr>
            <tr>
              <td><label for="price">Product Price</label></td>
              <td><input type="text" id="price" name="price" value="{{product.ProductPrice}}" required><br></td>
            </tr>


            <tr>
              <td><label for="description">Description</label></td>
              <td>
                <textarea id="description" name="description" required>{{product.Description}}</textarea>
                <br>
              </td>
            </tr>

            <tr>
            <td> <label for="image">Product Image</label><br>{{#if product.Image}}</td>
            <td><img src="/img/products/{{product.Image}}" alt="{{product.product_name}}" width="200px" class="dev-img">{{/if}}
              <input type="file" id="image" name="image"></td>
            </tr>

            <tr>
              <td><label for="image">Product Varieties</label></td>
              <td><div class="features_items">
                {{#if product.product_varieties}}
                  {{#each product.product_varieties as |variety|}}
                    <hr />
                    <div class="row">
                      <div class="col-sm-3">
                        <div class="product-image-wrapper">
                          <div class="single-products">
                            <div class="productinfo text-center"><img src="/img/products/{{product.Image}}" alt="{{product.product_name}}"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <table class="table">
                          <tbody>
                          <tr>
                            <td><b>Size:</b></td>
                            <td>{{variety.size}}</td>
                          </tr><tr>
                            <td><b>Color:</b></td>
                            <td>{{variety.color}}</td>
                          </tr><tr>
                            <td><b>Quantity:</b></td>
                            <td>{{variety.quantity}}</td>
                          </tr><tr>
                            <td><b>Images:</b></td>
                            <td>{{variety.images}}</td>
                          </tr><tr>
                            <td><b>Price:</b></td>
                            <td>â‚¦ {{variety.price}}</td>
                          </tr><tr>
                            <td><b>Size:</b></td>
                            <td>{{variety.size}}</td>
                          </tr>
                          </tbody>
                        </table>
                      </div>
                      <div class="col-sm-3">
                        <a href="/admin/products/{{variety.productId}}/{{variety.id}}/edit-variety" class="btn btn-default"><i class="fa fa-edit"></i>{{' Edit'}}</a>
                        <a href="/admin/products/{{variety.productId}}/{{variety.id}}/delete" class="btn btn-default"><i class="fa fa-trash-o"></i>{{' Delete'}}</a>
                      </div>
                    </div>
                  </div>
                  {{/each}}
                {{else }}
                  This Product has no Variety
                {{/if}}
                <a href="/admin/products/{{product.ProductID}}/add-variety" type="submit" class="cus-btn btn btn-default">Add a Product Variety</a>
              </td>
            </tr>

            <tr>
              <td><button type="submit" class="cus-btn btn btn-default">Submit</button></td>
            </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</section>
