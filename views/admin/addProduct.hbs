<section>
  <div class="container">
    <div class="row">
      <!--title here. no duplicate-->
      <!--if navList-->
      <div class="col-sm-3">
        <!-- nav-bar-->
        <div class="left-sidebar">
          <div id="accordian" class="panel-group category-products">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/cat">Categories</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/products">Products</a></h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="/admin/orders">Orders</a></h4>
              </div>
            </div>

          </div>
        </div>
        <!--/nav-bar-->
      </div>
      <div class="col-sm-9">

        <form id="addProduct" action="/admin/products/add" method="POST">
          <label for="name">Product Name</label><br>
          <input type="text" id="name" name="name" placeholder="Product Name" required><br>

          <label for="category">Category</label><br>
          <select id="category" name="category">
            {{#each categories as |category|}}
          <option value="{{category.CategoryID}}">{{category.CategoryName}}</option>
        {{/each}}</select><br>

          <label for="price">Product Price</label><br>
          <input type="text" id="price" name="price" placeholder="125.88" required><br>

          <label for="description">Description</label><br>
          <textarea id="description" name="description" required>Product Description</textarea><br>

          <label for="year">Manufacturing Year</label><br>
          <input type="text" id="year" name="year" placeholder="2020" required><br>

          <label for="image">Product Image</label><input type="file" id="image" name="image"><br>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>
