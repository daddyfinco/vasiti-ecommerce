      <div class="col-sm-9">

        <form id="addVariety" action="/admin/products/{{product.ProductID}}/add-variety" method="POST">
          <table class="table table-condensed">
            <tbody>

            <tr>
              <td><label for="size">Size</label><br></td>
              <td><input type="text" id="size" name="size" placeholder="Product Name" required><br></td>
            </tr>

            <tr>
              <td><label for="color">Color</label><br></td>
              <td><input type="text" id="color" name="color" placeholder="White" required><br></td>
            </tr>

            <tr>
              <td><label for="quantity">Quantity</label><br></td>
              <td><input type="text" id="quantity" name="quantity" placeholder="12" required><br></td>
            </tr>

            <tr>
              <td><label for="image">Image</label><br></td>
              <td><input type="file" id="image" name="image"></td>
            </tr>

            <tr>
              <td><label for="price">Price</label><br></td>
              <td><input type="text" id="price" name="price" placeholder="1000" required><br></td>
            </tr>

            <tr>
              <td> <button type="submit" class="btn btn-default">Submit</button></td>
            </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
