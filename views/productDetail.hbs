    <!--.col-sm-9.padding-right-->{{#if product}}
    <!-- product-details-->
    <div class="product-details">
      <!--product-image-->
      <div class="col-sm-5">
        <div class="view-product"><img src="/img/products/{{product.Image}}" alt="{{product.product_name}}"></div>
      </div>
      <!--/product-image-->
      <!--product-information-->
      <div class="col-sm-7">
      <div class="product-information">
        <!--img.newarrival(src='/img/product-details/new.jpg', alt='')-->
        <h2>{{product.product_name}}</h2>
        <p>{{product.ProductDescription}}</p>
        <p><b>Availability:</b>Available</p>
        <p><b>Manufacturing year:</b>{{product.ManufactureYear}}</p>
        <p><b>Brand:</b> aStore</p><span><span>₦ {{product.ProductPrice}}</span>
                    <form action="/cart/{{product.ProductID}}/add" method="POST"><label>Quantity:<input type="text" name="quantity" value="1"></label><br>
                      <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</button></form>
                  </span>

        <!-- The Product Variations-->
        {{#if product.product_varieties}}
          {{#each product.product_varieties as |variety|}}
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <div class="product-image-wrapper">
                  <div class="single-products">
                    <div class="productinfo text-center">
                      {{#each variety.images as |image|}}
                        <img src="{{image}}" alt="{{product.product_name}}">
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <table class="table">
                  <tbody>
                  <tr>
                    <td><b>Size:</b></td>
                    <td>{{variety.size}}</td>
                  </tr><tr>
                    <td><b>Color:</b></td>
                    <td>{{variety.color}}</td>
                  </tr><tr>
                    <td><b>Quantity:</b></td>
                    <td>{{variety.quantity}}</td>
                  </tr><tr>
                    <td><b>Images:</b></td>
                    <td>{{variety.images}}</td>
                  </tr><tr>
                    <td><b>Price:</b></td>
                    <td>₦ {{variety.price}}</td>
                  </tr><tr>
                    <td><b>Size:</b></td>
                    <td>{{variety.size}}</td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          {{/each}}
        {{else }}
          <p>This Product has no Variety</p>
        {{/if}}
      </div>
    </div>
    <!--/product-information-->
  </div>
    <!--/product-details-->
  {{/if}}
